{
    "name": "kubeseal-vscode",
    "displayName": "Kubeseal VSCode",
    "description": "VS Code extension for encrypting and decrypting Kubernetes secrets using kubeseal",
    "version": "1.17.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/duyluann/kubeseal-vscode.git"
    },
    "publisher": "ops4life",
    "icon": "icon.png",
    "engines": {
        "node": ">=20.0.0",
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:helm",
        "onLanguage:yaml",
        "onFileSystem:k8smsx"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "kubeseal.encrypt",
                "title": "Encrypt with Kubeseal"
            },
            {
                "command": "kubeseal.decrypt",
                "title": "Decrypt Secret"
            },
            {
                "command": "kubeseal.setCertFolder",
                "title": "Set Kubeseal Certificate Folder"
            },
            {
                "command": "kubeseal.selectCertificate",
                "title": "Select Certificate"
            },
            {
                "command": "kubeseal.encodeBase64",
                "title": "Encode Base64 Values"
            },
            {
                "command": "kubeseal.decodeBase64",
                "title": "Decode Base64 Values"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceExtname =~ /\\.(yaml|yml)$/",
                    "command": "kubeseal.encrypt",
                    "group": "kubeseal"
                },
                {
                    "when": "resourceExtname =~ /\\.(yaml|yml)$/",
                    "command": "kubeseal.decrypt",
                    "group": "kubeseal"
                },
                {
                    "when": "resourceExtname =~ /\\.(yaml|yml)$/",
                    "command": "kubeseal.encodeBase64",
                    "group": "kubeseal@encode"
                },
                {
                    "when": "resourceExtname =~ /\\.(yaml|yml)$/",
                    "command": "kubeseal.decodeBase64",
                    "group": "kubeseal@encode"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceExtname =~ /\\.(yaml|yml)$/",
                    "command": "kubeseal.encrypt",
                    "group": "kubeseal"
                },
                {
                    "when": "resourceExtname =~ /\\.(yaml|yml)$/",
                    "command": "kubeseal.decrypt",
                    "group": "kubeseal"
                },
                {
                    "when": "resourceExtname =~ /\\.(yaml|yml)$/",
                    "command": "kubeseal.encodeBase64",
                    "group": "kubeseal@encode"
                },
                {
                    "when": "resourceExtname =~ /\\.(yaml|yml)$/",
                    "command": "kubeseal.decodeBase64",
                    "group": "kubeseal@encode"
                }
            ]
        },
        "configuration": {
            "title": "Kubeseal",
            "properties": {
                "kubeseal.certsFolder": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the folder containing kubeseal certificate files (*.pem, *.crt, *.cert)"
                },
                "kubeseal.activeCertFile": {
                    "type": "string",
                    "default": "",
                    "description": "Filename of the currently active certificate in the certs folder"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./out/test/runTest.js",
        "lint": "eslint src --ext ts",
        "lint:fix": "eslint src --ext ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "package": "vsce package --no-yarn",
        "clean": "rimraf out *.vsix"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^7.1.0",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^12.0.1",
        "@semantic-release/npm": "^12.0.2",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^24.10.0",
        "@types/vscode": "1.80.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vscode/vsce": "^3.6.2",
        "conventional-changelog-conventionalcommits": "^9.1.0",
        "eslint": "^8.57.0",
        "prettier": "^3.0.0",
        "rimraf": "^6.1.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "js-yaml": "^4.1.0"
    }
}
